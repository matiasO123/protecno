@{
    ViewData["Title"] = "Home";
}

<style>
    .menu-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        max-width: 600px;
        margin: 40px auto;
    }

    .menu-item {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 30px 15px;
        text-align: center;
        color: #212529;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 150px;
    }

        .menu-item:hover {
            background-color: #e9ecef;
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .menu-item i {
            font-size: 2.5rem;
            margin-bottom: 15px;
        }
</style>

<div class="text-center">
    <h1 class="display-4 mb-5">Bienvenidos</h1>

    <div class="menu-grid">
        <a asp-controller="Clientes" asp-action="Index" class="menu-item">
            <i class="bi bi-people-fill"></i>
            Clientes
        </a>

        <a asp-controller="Productoes" asp-action="Index" class="menu-item">
            <i class="bi bi-box-seam"></i>
            Productos
        </a>

        <a asp-controller="Home" asp-action="Reportes" class="menu-item">
            <i class="bi bi-graph-up"></i>
            Reportes
        </a>


        <a asp-controller="Facturas" asp-action="Index" class="menu-item">
            <i class="bi bi-cash-stack"></i>
            Facturación
        </a>
    </div>

    <p class="mt-5">Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@section Scripts {
    <!-- Agrega Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
